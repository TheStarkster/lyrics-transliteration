[Unit]
Description=Lyrics Transliteration Service
After=network.target

[Service]
User=root
WorkingDirectory=/root/lyrics-transliteration
ExecStart=/root/demucs-env/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=on-failure
RestartSec=5
Environment=PYTHONPATH=/root/lyrics-transliteration
Environment=AZURE_OPENAI_KEY=c1b98148632f4133a5f5aa1146f640ed
Environment=PATH=/root/demucs-env/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

[Install]
WantedBy=multi-user.target